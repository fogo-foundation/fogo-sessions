{
  "name": "@fogo/sessions-sdk-react",
  "version": "0.1.4",
  "private": true,
  "description": "React components and hooks for integrating with Fogo sessions",
  "keywords": [
    "fogo",
    "sessions",
    "crypto",
    "wallet",
    "web",
    "react"
  ],
  "type": "module",
  "source": "./src/index.tsx",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "engines": {
    "node": ">=22"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "targets": {
    "cjs": {
      "context": "browser",
      "distDir": "./dist/cjs",
      "outputFormat": "commonjs",
      "isLibrary": true,
      "source": "./src/index.tsx",
      "includeNodeModules": {
        "@fogo/component-library": true
      }
    },
    "esm": {
      "context": "browser",
      "distDir": "./dist/esm",
      "outputFormat": "esmodule",
      "isLibrary": true,
      "source": "./src/index.tsx",
      "includeNodeModules": {
        "@fogo/component-library": true
      }
    }
  },
  
  "scripts": {
    "build": "pnpm clean && pnpm build:bundle",
    "build:bundle": "parcel build --target cjs --target esm",
    "build:package-json": "transform-package-json ./package.json dist/package.json",
    "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly --outDir ./dist/types",
    "clean": "rm -rf dist",
    "fix:format": "prettier --write .",
    "fix:lint:eslint": "eslint --fix .",
    "fix:lint:stylelint": "stylelint --fix 'src/**/*.scss'",
    "start:dev": "parcel watch --target cjs --target esm",
    "test:format": "run-jest --colors --selectProjects format",
    "test:integration": "run-jest --colors --selectProjects integration",
    "test:lint:eslint": "run-jest --colors --selectProjects lint",
    "test:lint:stylelint": "stylelint --color 'src/**/*.scss'",
    "test:types": "tsc --project tsconfig.build.json --emitDeclarationOnly --outDir ./dist/types"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "dependencies": {
    "@coral-xyz/anchor": "catalog:",
    "@fogo/sessions-idls": "workspace:^",
    "@fogo/sessions-sdk": "workspace:^",
    "@fogo/sessions-sdk-web": "workspace:^",
    "@phosphor-icons/react": "catalog:",
    "@react-hookz/web": "catalog:",
    "@solana-mobile/wallet-adapter-mobile": "catalog:",
    "@solana/kit": "catalog:",
    "@solana/spl-token": "catalog:",
    "@solana/wallet-adapter-backpack": "catalog:",
    "@solana/wallet-adapter-base": "catalog:",
    "@solana/wallet-adapter-wallets": "catalog:",
    "@solana/wallet-standard-wallet-adapter-react": "catalog:",
    "@solana/web3.js": "catalog:",
    "@wormhole-foundation/sdk": "catalog:",
    "@yudiel/react-qr-scanner": "catalog:",
    "bs58": "catalog:",
    "clsx": "catalog:",
    "idb": "catalog:",
    "modern-normalize": "catalog:",
    "motion": "catalog:",
    "qrcode.react": "catalog:",
    "react-aria-components": "catalog:",
    "swr": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cprussin/eslint-config": "catalog:",
    "@cprussin/jest-config": "catalog:",
    "@cprussin/prettier-config": "catalog:",
    "@cprussin/transform-package-json": "catalog:",
    "@cprussin/tsconfig": "catalog:",
    "@testing-library/dom": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/jest": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@fogo/component-library": "workspace:^",
    "eslint": "catalog:",
    "jest": "catalog:",
    "parcel": "catalog:",
    "prettier": "catalog:",
    "puppeteer": "catalog:",
    "react": "catalog:",
    "sass": "catalog:",
    "stylelint": "catalog:",
    "stylelint-config-standard-scss": "catalog:",
    "typescript": "catalog:"
  }
}
