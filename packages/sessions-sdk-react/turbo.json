{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "build:cjs",
        "build:css:cjs",
        "build:css:esm",
        "build:esm",
        "build:package-json"
      ]
    },
    "build:css:cjs": {
      "dependsOn": [
        "//#install:modules"
      ],
      "inputs": [
        "src/**/*.scss"
      ],
      "outputs": [
        "dist/cjs/**/*.css"
      ]
    },
    "build:css:esm": {
      "dependsOn": [
        "//#install:modules"
      ],
      "inputs": [
        "src/**/*.scss"
      ],
      "outputs": [
        "dist/esm/**/*.css"
      ]
    },
    "start:dev": {
      "with": [
        "start:dev:tsc",
        "start:dev:sass",
        "@fogo/sessions-sdk#start:dev",
        "@fogo/sessions-sdk-web#start:dev",
        "@fogo/component-library#start:dev"
      ],
      "persistent": false
    },
    "start:dev:tsc": {
      "dependsOn": [
        "//#install:modules",
        "^build"
      ],
      "persistent": true,
      "cache": false
    },
    "start:dev:sass": {
      "dependsOn": [
        "//#install:modules"
      ],
      "persistent": true,
      "cache": false
    }
  }
}