{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "build:cjs",
        "build:css:cjs",
        "build:css:esm",
        "build:esm",
        "build:package-json"
      ]
    },
    "build:css:cjs": {
      "dependsOn": ["//#install:modules"],
      "inputs": ["src/**/*.scss"],
      "outputs": ["dist/cjs/**/*.css"]
    },
    "build:css:esm": {
      "dependsOn": ["//#install:modules"],
      "inputs": ["src/**/*.scss"],
      "outputs": ["dist/esm/**/*.css"]
    },
    "fix:lint": {
      "dependsOn": ["fix:lint:biome", "fix:lint:stylelint"],
      "cache": false
    },
    "fix:lint:biome": {
      "dependsOn": ["//#install:modules", "^build"],
      "cache": false
    },
    "fix:lint:stylelint": {
      "dependsOn": ["//#install:modules"],
      "cache": false
    },
    "start:dev": {
      "with": [
        "start:dev:tsc",
        "start:dev:sass",
        "@fogo/sessions-sdk#start:dev",
        "@fogo/sessions-sdk-web#start:dev",
        "@fogo/component-library#start:dev"
      ],
      "persistent": false
    },
    "start:dev:tsc": {
      "dependsOn": ["//#install:modules", "^build"],
      "persistent": true,
      "cache": false
    },
    "start:dev:sass": {
      "dependsOn": ["//#install:modules"],
      "persistent": true,
      "cache": false
    },
    "test:lint": {
      "dependsOn": [
        "//#install:modules",
        "^build",
        "test:lint:biome",
        "test:lint:stylelint"
      ]
    },
    "test:lint:biome": {
      "dependsOn": ["//#install:modules", "^build"]
    },
    "test:lint:stylelint": {
      "dependsOn": ["//#install:modules"]
    }
  }
}
