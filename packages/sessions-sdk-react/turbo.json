{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": [
        "//#install:modules",
        "^build",
        "build:bundle",
        "build:types",
        "build:package-json"
      ],
      "outputs": ["dist/**"]
    },
    "build:bundle": {
      "dependsOn": ["//#install:modules", "^build"],
      "outputs": ["dist/cjs/**", "dist/esm/**"]
    },
    "build:package-json": {
      "dependsOn": ["//#install:modules"],
      "outputs": ["dist/package.json"]
    },
    "build:types": {
      "dependsOn": ["//#install:modules", "^build"],
      "outputs": ["dist/types/**"]
    },
    "fix:lint": {
      "dependsOn": ["fix:lint:eslint", "fix:lint:stylelint"],
      "cache": false
    },
    "fix:lint:eslint": {
      "dependsOn": ["//#install:modules", "^build"],
      "cache": false
    },
    "fix:lint:stylelint": {
      "dependsOn": ["//#install:modules"],
      "cache": false
    },
    "start:dev": {
      "dependsOn": ["//#install:modules", "^build"],
      "persistent": true,
      "cache": false
    },
    "test:lint": {
      "dependsOn": [
        "//#install:modules",
        "^build",
        "test:lint:eslint",
        "test:lint:stylelint"
      ]
    },
    "test:lint:eslint": {
      "dependsOn": ["//#install:modules", "^build"]
    },
    "test:lint:stylelint": {
      "dependsOn": ["//#install:modules"]
    }
  }
}
