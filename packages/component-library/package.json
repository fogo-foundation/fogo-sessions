{
  "name": "@fogo/component-library",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./Button": {
      "types": "./dist/Button/index.d.ts",
      "default": "./dist/Button/index.mjs"
    },
    "./Link": {
      "types": "./dist/Link/index.d.ts",
      "default": "./dist/Link/index.mjs"
    },
    "./package.json": "./package.json",
    "./theme": "./dist/theme.scss"
  },
  "scripts": {
    "build": "ts-duality --noCjs",
    "build:watch": "nodemon --verbose --watch ./src --ext ts,tsx,scss --exec \"rm -rf ./dist && pnpm turbo --filter @fogo/component-library build\"",
    "build:storybook": "storybook build",
    "build:scss": "copyfiles -u 1 \"src/**/*.scss\" ./dist",
    "clean": "rm -rf ./dist",
    "fix:format": "prettier --write .",
    "fix:lint:eslint": "eslint --fix .",
    "fix:lint:stylelint": "stylelint --fix 'src/**/*.scss'",
    "start:dev": "storybook dev --port 4000 --no-open",
    "test:format": "prettier --check .",
    "test:lint:eslint": "eslint . --max-warnings 0",
    "test:lint:stylelint": "stylelint 'src/**/*.scss' --max-warnings 0",
    "test:types": "tsc"
  },
  "peerDependencies": {
    "next": "catalog:",
    "react": "catalog:"
  },
  "dependencies": {
    "clsx": "catalog:",
    "modern-normalize": "catalog:",
    "motion": "catalog:",
    "react-aria": "catalog:",
    "react-aria-components": "catalog:",
    "react-dom": "catalog:",
    "swr": "catalog:"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "catalog:",
    "@better-builds/ts-duality": "catalog:",
    "@cprussin/eslint-config": "catalog:",
    "@cprussin/prettier-config": "catalog:",
    "@cprussin/tsconfig": "catalog:",
    "@phosphor-icons/react": "catalog:",
    "@storybook/addon-styling-webpack": "catalog:",
    "@storybook/addon-themes": "catalog:",
    "@storybook/nextjs": "catalog:",
    "@storybook/react": "catalog:",
    "@svgr/webpack": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "autoprefixer": "catalog:",
    "babel-plugin-react-compiler": "catalog:",
    "copyfiles": "catalog:",
    "css-loader": "catalog:",
    "eslint": "catalog:",
    "nodemon": "catalog:",
    "postcss": "catalog:",
    "postcss-loader": "catalog:",
    "prettier": "catalog:",
    "react": "catalog:",
    "sass": "catalog:",
    "sass-loader": "catalog:",
    "storybook": "catalog:",
    "style-loader": "catalog:",
    "stylelint": "catalog:",
    "stylelint-config-standard-scss": "catalog:",
    "typescript": "catalog:"
  },
  "ts-duality": {
    "extraExports": {
      "./theme": "./dist/theme.scss"
    }
  }
}