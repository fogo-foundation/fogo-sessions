{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "build:cjs",
        "build:css:cjs",
        "build:css:esm",
        "build:theme.scss",
        "build:esm"
      ]
    },
    "build:storybook": {
      "dependsOn": ["//#install:modules"],
      "outputs": ["storybook-static/**"]
    },
    "build:css:cjs": {
      "dependsOn": ["//#install:modules"],
      "inputs": ["src/**/*.scss"],
      "outputs": ["dist/cjs/**/*.css"]
    },
    "build:css:esm": {
      "dependsOn": ["//#install:modules"],
      "inputs": ["src/**/*.scss"],
      "outputs": ["dist/esm/**/*.css"]
    },
    "build:theme.scss": {
      "dependsOn": ["//#install:modules"],
      "inputs": ["src/theme.scss"],
      "outputs": ["dist/theme.scss"]
    },
    "fix:lint": {
      "dependsOn": ["fix:lint:eslint", "fix:lint:stylelint"],
      "cache": false
    },
    "fix:lint:eslint": {
      "dependsOn": ["//#install:modules", "^build"],
      "cache": false
    },
    "fix:lint:stylelint": {
      "dependsOn": ["//#install:modules"],
      "cache": false
    },
    "start:dev": {
      "with": ["start:dev:sass", "start:dev:theme.scss", "start:dev:tsc"],
      "persistent": false
    },
    "start:dev:sass": {
      "dependsOn": ["//#install:modules"],
      "persistent": true,
      "cache": false
    },
    "start:dev:theme.scss": {
      "dependsOn": ["//#install:modules", "^build"],
      "persistent": true,
      "cache": false
    },
    "start:dev:tsc": {
      "dependsOn": ["//#install:modules", "^build"],
      "persistent": true,
      "cache": false
    },
    "test:lint": {
      "dependsOn": [
        "//#install:modules",
        "^build",
        "test:lint:eslint",
        "test:lint:stylelint"
      ]
    },
    "test:lint:eslint": {
      "dependsOn": ["//#install:modules", "^build"]
    },
    "test:lint:stylelint": {
      "dependsOn": ["//#install:modules"]
    }
  }
}
