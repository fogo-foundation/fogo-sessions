{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "verbatimModuleSyntax": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib/typescript"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.test.*",
    "**/__tests__/**",
    "node_modules",
    "lib",
    "example"
  ]
}
