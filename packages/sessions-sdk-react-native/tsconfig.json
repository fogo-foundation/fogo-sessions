{
  "extends": "@cprussin/tsconfig/base.json",
  "compilerOptions": {
    "jsx": "react-native",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["react-native", "jest"],
    "verbatimModuleSyntax": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
