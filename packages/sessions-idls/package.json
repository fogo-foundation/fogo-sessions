{
  "name": "@fogo/sessions-idls",
  "version": "0.0.1",
  "private": true,
  "description": "The IDLs for the on-chain programs involved in the Fogo Sessions protocol",
  "keywords": [
    "fogo",
    "sessions",
    "crypto",
    "wallet"
  ],
  "type": "module",
  "main": "./dist/cjs/index.cjs.js",
  "types": "./dist/cjs/index.cjs.d.ts",
  "exports": {
    "import": {
      "types": "./dist/esm/index.esm.d.ts",
      "default": "./dist/esm/index.esm.js"
    },
    "require": {
      "types": "./dist/cjs/index.cjs.d.ts",
      "default": "./dist/cjs/index.cjs.js"
    }
  },
  "scripts": {
    "build:cjs": "tsc --project tsconfig.build.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "build:esm": "tsc --project tsconfig.build.esm.json && echo '{\"type\":\"module\"}' > dist/esm/package.json",
    "build:package-json": "transform-package-json ./package.json dist/package.json",
    "build:idl": "mkdir -p src/idl && mkdir -p src/types && anchor idl build --program-name session-manager --out-ts src/types/session-manager.ts --out src/idl/session-manager.json && anchor idl build --program-name example --out-ts src/types/example.ts --out src/idl/example.json",
    "fix:format": "prettier --write .",
    "fix:lint": "eslint --fix . --max-warnings 0",
    "test:format": "run-jest --colors --selectProjects format",
    "test:lint": "run-jest --colors --selectProjects lint",
    "test:types": "tsc"
  },
  "devDependencies": {
    "@cprussin/eslint-config": "catalog:",
    "@cprussin/jest-config": "catalog:",
    "@cprussin/prettier-config": "catalog:",
    "@cprussin/transform-package-json": "catalog:",
    "@cprussin/tsconfig": "catalog:",
    "@types/jest": "catalog:",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "jest": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
}
