{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:cjs": {
      "dependsOn": ["//#install:modules", "^build", "build:idl"]
    },
    "build:esm": {
      "dependsOn": ["//#install:modules", "^build", "build:idl"]
    },
    "build:idl": {
      "inputs": ["../../**/*.rs", "../../**/Cargo.toml", "../../Anchor.toml"],
      "outputs": [
        "src/idl/chain-id.json",
        "src/idl/domain-registry.json",
        "src/idl/example.json",
        "src/idl/intent-transfer.json",
        "src/idl/session-manager.json",
        "src/idl/tollbooth.json",
        "src/types/chain-id.ts",
        "src/types/domain-registry.ts",
        "src/types/example.ts",
        "src/types/intent-transfer.ts",
        "src/types/session-manager.ts",
        "src/types/tollbooth.ts"
      ]
    },
    "build:types": {
      "dependsOn": ["//#install:modules", "^build", "build:idl"]
    },
    "fix:lint": {
      "dependsOn": ["//#install:modules", "^build", "build:idl"]
    },
    "test:lint": {
      "dependsOn": ["//#install:modules", "^build", "build:idl"]
    },
    "test:types": {
      "dependsOn": ["//#install:modules", "^build", "build:idl"]
    }
  }
}
