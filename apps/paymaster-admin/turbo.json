{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["build:validator"],
      "env": [
        "DISABLE_ACCESSIBILITY_REPORTING",
        "GOOGLE_ANALYTICS_ID",
        "VERCEL_ENV",
        "DATABASE_URL"
      ]
    },
    "build:validator": {
      "outputs": ["bin/**"],
      "inputs": [
        "../../services/paymaster/src/**",
        "../../services/paymaster/Cargo.toml"
      ]
    },
    "test:types": {
      "dependsOn": ["build"]
    }
  }
}
