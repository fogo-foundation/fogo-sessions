{
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",
  "name": "Fogo Sessions - Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "options": [
      "--platform=linux/amd64"
    ]
  },
  // if you need more ports exposed so you can access them for local development,
  // add them here
  "forwardPorts": [
    3000,
    3001,
    3002
  ],
  "postCreateCommand": "./.devcontainer/post-create.sh",
  "features": {
    "ghcr.io/devcontainers-extra/features/mise:1": {
      "version": "latest"
    }
  },
  "mounts": [
    // maps your git config into the devcontainer so your git identities remain the same
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    // see comment, above, about the preventing ssh gymnastics
    "SSH_AUTH_SOCK": "/tmp/ssh-agent.sock"
  },
  "runArgs": [
    "--platform=linux/amd64"
  ],
  // --- PERFORMANCE OVERRIDES ---
  // This creates a named volume so files live in the Docker container.
  // FS bridged mounts on MacOS have abysmal performance, so this is a necessary evil
  "workspaceMount": "source=fogo-sessions-unique-vol,target=/workspaces/fogo-sessions,type=volume",
  "workspaceFolder": "/workspaces/fogo-sessions",
  "customizations": {
    "vscode": {
      "extensions": [
        "arcanis.vscode-zipfs",
        "bbenoist.nix",
        "biomejs.biome",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "editorconfig.editorconfig",
        "esbenp.prettier-vscode",
        "fabiospampinato.vscode-open-in-github",
        "github.vscode-github-actions",
        "golang.go",
        "mhutchie.git-graph",
        "mike-co.import-sorter",
        "mrmlnc.vscode-scss",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.remote-ssh",
        "ms-vscode-remote.remote-ssh-edit",
        "ms-vscode.live-server",
        "ms-vscode.remote-explorer",
        "oderwat.indent-rainbow",
        "oven.bun-vscode",
        "pkief.material-icon-theme",
        "redhat.vscode-yaml",
        "rust-lang.rust-analyzer",
        "styled-components.vscode-styled-components",
        "tamasfe.even-better-toml",
        "unifiedjs.vscode-mdx",
        "yoavbls.pretty-ts-errors",
        "zhihaocui.ts-interface-sorter",
        "zxh404.vscode-proto3"
      ]
    }
  }
}