{
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "type": "module",
  "engines": {
    "node": "^22.17.0",
    "pnpm": "^10.13.1"
  },
  "scripts": {
    "build:replace-packages-with-built-packages": "bash -c 'for package in packages/*/package.json; do packagePath=${package///package.json}; mv \"${packagePath}\" \"${packagePath}-old\"; mv \"${packagePath}-old/dist\" \"${packagePath}\"; rm -rf \"${packagePath}-old\"; done'; pnpm i --no-frozen-lockfile",
    "fix:format": "prettier --write .",
    "fix:lint": "eslint --fix .",
    "install:modules": "[ $CI ] && true || pnpm install",
    "publish": "changeset publish",
    "run:add-program-id-to-domain-registry": "add-program-id-to-domain-registry",
    "run:initialize-chain-id": "initialize-chain-id",
    "test:format": "run-jest --colors --selectProjects format",
    "test:lint": "run-jest --colors --selectProjects lint",
    "turbo": "[ ! -d node_modules ] && pnpm install; turbo"
  },
  "devDependencies": {
    "@changesets/cli": "catalog:",
    "@cprussin/eslint-config": "catalog:",
    "@cprussin/jest-config": "catalog:",
    "@cprussin/prettier-config": "catalog:",
    "eslint": "catalog:",
    "@fogo/scripts": "workspace:*",
    "jest": "catalog:",
    "prettier": "catalog:",
    "turbo": "catalog:"
  }
}
